<Dashboard>:
    name: "dashboard"
    BoxLayout:
        size_hint: 1, .9
        pos_hint: {"top": 1}
        orientation: "vertical"
        GridLayout:
            size: root.width, root.height
            cols: 1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: "Images/LogoTekstZijkant.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 0.8
                allow_stretch: True
                keep_ratio: True
                size_hint: 1, 1
            
            Button:
                text: "Planning"
                background_normal : ""
                background_color: (1,0,0,1)
                on_release: app.root.current = "planning"
                color: 0,0,0,1
                Image:
                    source: "Images/planning.png"
                    center_x: self.parent.center_x - (self.parent.center_x / 1.2)
                    center_y: self.parent.center_y
                    allow_stretch: True
                    keep_ratio: True
                    size: (self.parent.center_x / 3, self.parent.center_y / 3)
                
            Button: 
                background_normal : ""
                background_color: (0,0,1,1)
                text: "Schoolwerk"
                on_release: app.root.current = "schoolwerk"
                color: 0,0,0,1
                Image:
                    source: "Images/schoolwerk.png"
                    center_x: self.parent.center_x - (self.parent.center_x / 1.2)
                    center_y: self.parent.center_y
                    allow_stretch: True
                    keep_ratio: True
                    size: (self.parent.center_x / 3, self.parent.center_y / 3)

            GridLayout:
                cols: 2
                Button:
                    text: "Nieuw Huiswerk"
                    background_normal: ""
                    background_color: (0,1,0,1)
                    on_release: app.root.current = "nieuw huiswerk"
                Button: 
                    text: "Cijferoverzicht"
                    on_release: app.root.current = "cijfers"
            GridLayout:
                cols: 3
                background_normal: ""
                Button:
                    text: "Cijfer 1"
                    on_release: app.root.current = "cijfers"
                Button:
                    text: "Cijfer 2"
                    on_release: app.root.current = "cijfers"
                Button:
                    text: "Cijfer 3"
                    on_release: app.root.current = "cijfers"
    Navbar:

