            id: date_picker
            text: "Kies Datum"
            size_hint: 1, .2
            on_release: app.kies_datum()
        Spinner:
            id: kiesvakHW
            size_hint: 1, .2
            text: "Selecteer een vak"
            on_press: root.spinnerHW_clicked()
        Button:
            text: "Opslaan"
            on_release: app.submit_huiswerk()
