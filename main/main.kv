                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            #wat is het
            id: welkHW
            multiline: False
            size_hint: 1, .2
            hint_text: "Huiswerk"
        TextInput:
            #extra info
            id: infoHW
            multiline: True
            size_hint: 1, .2
            hint_text: "Extra informatie"
