                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            #wat is het
            multiline: False
            size_hint: 1, .2
        TextInput:
            #extra info
            multiline: True
            size_hint: 1, .2
        TextInput:
            #datum
            multiline: False
            size_hint: 1, .2
        
        Spinner:
            size_hint: 1, .2
            text: "Selecteer een vak"
            values: ["Nederlands", "Wiskunde", "LO"]

            on_text: root.spinner_clicked(kiesvak.text)
