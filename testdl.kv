#:kivy 2.1.0
WindowManager:
    Dashboard:
    Navbar:
    Cijfers:
    Vakken:
    Toetsen:
    Huiswerk:

<Navbar>:
    name: "Navbar"
    GridLayout:
        size_hint: 1, .1
        cols : 5
        Button:
            text: "Dashboard"
            on_release: app.root.current = "dashboard"
            background_normal: ""
            background_color: (1,1,1,1)
            Image:
                source: "Images/dashboard.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 0.8
                allow_stretch: True
                keep_ratio: True
                size: (25, 25)
            Label: 
                text: "Dashboard"
                color: (0,0,0,1)
                font_size: 12
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 2.1

        Button:
            text: "Huiswerk"
            on_release: app.root.current = "huiswerk"
            background_normal: ""
            background_color: (1,1,1,1)
            Image:
                source: "Images/homework.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 0.8
                allow_stretch: True
                keep_ratio: True
                size: (25, 25)
            Label: 
                text: "Huiswerk"
                color: (0,0,0,1)
                font_size: 12
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 2.1

        Button:
            text: "Toetsen"
            on_release: app.root.current = "toetsen"
            background_normal: ""
            background_color: (1,1,1,1)
            Image:
                source: "Images/test.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 0.8
                allow_stretch: True
                keep_ratio: True
                size: (25, 25)
            Label: 
                text: "Toetsen"
                color: (0,0,0,1)
                font_size: 12
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 2.1

        Button:
            text: "Cijfers"
            on_release: app.root.current = "cijfers"
            background_normal: ""
            background_color: (1,1,1,1)
            Image:
                source: "Images/grade.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y / 0.8
                allow_stretch: True
                keep_ratio: True
                size: (25, 25)
            Label: 
                text: "Cijfers"
                color: (0,0,0,1)
